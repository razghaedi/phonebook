@model PhoneBook.EndPoints.Mvc.Models.PersonForDisplayViewModels
@{
    ViewData["Title"] = "Add";
}
@section Head
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
}
<h3>Add People</h3>
<hr />
<form asp-controller="People" asp-action="Add" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" maxlength="50" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" maxlength="50" />
        <span class="text-error" asp-validation-for="LastName"></span>

    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" maxlength="300" />
        <span class="text-error"  asp-validation-for="Email"></span>

    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" maxlength="500" />
        <span class="text-error"   asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span class="text-error"   asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label for="SelectedTag">Tags</label>
        <select multiple class="form-control select2" name="SelectedTag">
            @foreach (var item in Model.TagsForDisplay)
            {
                <option value="@item.Id"> @item.Title</option>
            }
        </select>
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
</form>
@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script>$(document).ready(function () {
            $('.select2').select2();
        });</script>
}

