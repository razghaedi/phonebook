@model CreateUserForDisplayViewModel
@{
    ViewData["Title"] = "Create";
}
@section Head
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
}

<h1>Create</h1>
<form asp-controller="User" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" maxlength="50" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" maxlength="150" />
    </div>
    <div class="form-group">
        <label asp-for="Password" ></label>
        <input asp-for="Password" class="form-control" maxlength="50" />
    </div>
    <div class="form-group">
        <label for="SelectedRole">Role Name</label>
        <select multiple class="form-control select2" name="SelectedRole">
            @foreach (var item in Model.DisplayRoleName)
            {
                <option value="@item.Id"> @item.Name</option>
            }
        </select>
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
</form>
@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });</script>
}

